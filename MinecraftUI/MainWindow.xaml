<Window xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  x:Class="MinecraftUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <TabControl Style="{StaticResource MaterialDesignTabControl}">
            <TabItem Header="Console">
                <StackPanel>
                    <GroupBox Header="Server Management" 
                          Height="372" 
                          HorizontalAlignment="Left"
                          Width="1000">
                        <Grid Width="136"
                              HorizontalAlignment="Left"/>

                    </GroupBox>
                    <GroupBox Header="Quick Actions" 
                          Height="165" 
                          HorizontalAlignment="Left"
                          Width="144">
                        <StackPanel>
                            <Button Content="Start"/>
                            <Button Content="Restart"
                                    Margin="0 10 0 0"/>
                            <Button Content="Run Task"
                                    Margin="0 10 0 0"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Players"></TabItem>
            <TabItem Header="Starter"></TabItem>
            <TabItem Header="Issues"></TabItem>
            <TabItem Header="Tasker"></TabItem>
            <TabItem Header="Plugins"></TabItem>
            <TabItem Header="Editor"></TabItem>
            <TabItem Header="Backup"></TabItem>
            <TabItem Header="Settings"></TabItem>



        </TabControl>
    </Grid>
</Window>
