<Window x:Class="MinecraftUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MinecraftUI"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}" MaxWidth="1000" MaxHeight="650" ScrollViewer.VerticalScrollBarVisibility="Disabled" WindowStyle="SingleBorderWindow" MinHeight="650" MinWidth="1000">
    <Grid>
        <TabControl Style="{StaticResource MaterialDesignTabControl}">
            <TabItem Header="Console">
                <Grid Height="559" Margin="0,0,0,0">
                    <GroupBox Header="Server Management" 
                              Margin="10,5,10,190">
                        <Grid>
                            <DataGrid Margin="0,0,816,0" BorderThickness="1,1,1,1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Players"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBox 
                                     TextWrapping="Wrap" 
                                     Margin="136,287,0,0"/>
                            <RichTextBox Margin="136,0,0,32">
                                <FlowDocument>
                                    <Paragraph>
                                        <Run Text="RichTextBox"/>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>
                        </Grid>

                    </GroupBox>
                    <GroupBox Header="Performance" 
                              Margin="155,374,10,10"/>
                    <GroupBox Header="Quick Actions" 
                              Margin="10,374,835,10">
                        <Grid>
                            <Button Content="Start" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            <Button Content="Restart" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                            <Button Content="Run Task" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Players"></TabItem>
            <TabItem Header="Starter"></TabItem>
            <TabItem Header="Issues"></TabItem>
            <TabItem Header="Tasker"></TabItem>
            <TabItem Header="Plugins"></TabItem>
            <TabItem Header="Editor"></TabItem>
            <TabItem Header="Backup"></TabItem>
            <TabItem Header="Settings"></TabItem>



        </TabControl>
    </Grid>
</Window>
